<div class="container">
    <div class="row">
        <div class="col-6 col-md-6 py-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="h5">Cadastrar Professor</h1>
                </div>
                <div class="card-body">
                    <form class="row" action="/cadastrar" method="POST">
                        <div class="form-group col">
                            <label for="nome">Nome</label>
                            <input class="form-control" type="text" name="nome" placeholder="Digite seu primeiro nome"
                                required>
                        </div>
                        <div class="form-group col">
                            <label for="nome">Sobrenome</label>
                            <input class="form-control" type="text" name="sobrenome" placeholder="Digite seu sobrenome"
                                required>
                        </div>
                        <button class="btn btn-block btn-primary" type="submit">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-6 py-1">
            <div class="card">
                <div class="card-header">
                    <h1 class="h5">Lista de Professores</h1>
                </div>
                
                <div class="card-body">
                {{#each professores}}   
                    <li class="list-group-item">{{nome}} {{sobrenome}} </li>
                {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>